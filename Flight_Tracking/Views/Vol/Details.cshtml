@model Vol

@{
    var vol = (Vol)ViewData["vol"];
}

<div>
    <div class="card border-primary mb-4" style="max-width: 70rem;">
        <div class="card-header font-weight-bold">Vol de: @Model.Aeroport.libelle -> a destination: @Model.AeroportArrivee.libelle</div>
        <div class="card-body">
            <p class="card-text">date depart: @Model.dateDepart</p>
            <p class="card-text">date arrive: @Model.dateArrivee</p>
            <hr />
            <p class="card-text">model avion: @Model.Avion.libelle</p>
            <p class="card-text">totale des place: @Model.Avion.nombrePlace</p>
            <p class="card-text">consomation vol (Litre par Km): @Model.Avion.consomationKM</p>
            <p class="card-text">consomation depart: @Model.Avion.consomationDepart</p>
            <hr />
            <p class="card-text">Distance du voyage: @Model.calculerDistance() Km</p>
            <p class="card-text">consomation totale Feul: @Model.calculerConsomationVol() Litre</p>
        </div>
    </div>
</div>
